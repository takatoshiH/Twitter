<h2>Edit User</h2>
<%= form_for @user, url: user_path(@user) do |f| %>
<p>
  <%= f.text_field :name, placeholder: 'enter name' %>
  <% if @user.errors.messages[:name].any? %>
  <span class="error"><%= @user.errors.messages[:name][0] %></span>
  <% end %>
</p>
<p>
  <%= f.text_field :introduction, placeholder: 'enter intro' %>
    <% if @user.errors.messages[:introduction].any? %>
    <span class="error"><%= @user.errors.messages[:introduction][0] %></span>
  <% end %>
  </p>
<p>
  <%= f.submit %>
</p>
<% end %>