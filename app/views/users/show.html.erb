<div style="width: 75%; background-color:#00aced ; text-align: center; margin: 5px auto">
  <h1 style="color: white"><%= link_to "Twitterもどき", root_path, style:"color:white; text-decoration: none;" %></h1>
</div>

<div style="text-align: center;display: flex;width:75%; margin: 5px auto">
  <div style="margin: 5px auto;">
    <h3>@<%= @user.name %></h3>
    <h4><%=  @user.introduction %></h4>
    <p>ツイート<%= @user.tweets.count %></p>
  </div>
  <div>
  <p><%= link_to "変更", edit_user_path(@user) %></p>
  </div>
</div>

<div style="display: flex; width:75%; margin: 5px auto;">
  <div>
    <div style="text-align: center;margin-top: 5px">
      <%= link_to "Tweet", new_user_tweet_path(@user) %>
    </div>
    <div style="text-align: center">
      <%= link_to "Home", user_path(@user) %>
    </div>
    <div style="text-align: center">
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete%>
    </div>
    <div>
        <%= render 'follow_form' %>
        <%= render 'stats' %>
    </div>
  </div>

  <div style="text-align: center; width:75%; margin: 10px auto">

    <% @user.tweets.each do |tweet| %>
      <div style="height: 75px;border: 2px solid #000000; margin-top: 5px">
        <image src="image.png"></image>
        <%=  tweet.user.name %><br>
        <%=  link_to tweet.sentence, tweet_path(tweet) %><br>
        いいね <%= tweet.liked_users.count %>
      </div>
      <% end %>
  </div>
</div>